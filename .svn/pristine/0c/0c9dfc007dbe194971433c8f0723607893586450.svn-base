/*-----------------------------------------------------------------------------------*/

.post-type-archive-freebies #content {
	display: block;
	width: auto;
	margin-right: 0px;
}

.freebies_one_half {
	width: 300px;
	display: inline-block;
	vertical-align: top;
	margin-right: 0px;
	margin-bottom: 20px;
}

.single-freebies .post-media,
.post-type-archive-freebies .post-media{
	padding: 0px;
	background: none;
}



.single-freebies .download-col {
	float: left;
	width: 180px;
	margin: 0 auto;
}

.single-freebies .content-col {
	float: left;
	width: auto;
}




/* Widgets */

.left-sidebar #secondary .widget {
	text-align: left;
}

.right-sidebar #secondary .widget {
	text-align: left;
}


.widget ul {
	font-size: 1em;
	margin: 0;
	overflow: hidden;
	width: 100%;
}
.widget ul ul {
	margin-left: 1.5em;
}
.widget ul li {
	color: #777;
	font-size: 1em;
	margin: 5px auto;
}

.widget-entry-title {
	font-size: 1.125em;		
}	

.widget a {
	font-size: 1em;		
}

.widget_meta li,
.widget_links li,
.widget_pages li,
.widget_categories li,
.widget_archive li,
.widget_recent_comments li,
.widget_nav_menu li {
	float: left;
    width: 100%;
}



.tagcloud a {
	font-size: 1.5em !important;
	margin: 0 0.5em 0.5em 0;
	padding: 0.5em 1em;		
}






#footer_content {
	max-width: 320px;
	min-width: 300px;
	
}

#supplementary {
	display: none;
	width: 300px;
	margin: 0 auto;
	padding: 10px;
}
	
	
	
#site-generator {
	width: 300px;
	font-size: 1.125em;
	font-style: italic;
	margin: 0 auto;
	padding: 0;
}

#site-generator .copyright {
	display: block;
	width: 100%;
	float: left;
	margin: 10px auto;
}
#site-generator .footerMenu {
	display: block;
	width: 100%;
	float: left;
	margin: 10px auto;
}
#site-generator .footerMenu ul {
	float: none;
	display: inline-block;
	margin: 0;
}
#site-generator .footerMenu li {
	float: none;
	display: inline-block;
}
	
	

/* go to top */

	#back-to-top {
		bottom: 0;
		left: 0;
		margin-left: 0;
		height: 0;
		width: 0;
	display: none;
	visibility: hidden;
	}
	

/* Post format */
.format-status .entry-content .status-content,
.singular .format-status .entry-content .status-content{
	width: 280px;
}
.format-status .status-left-meta {
	display: block;
	float: left;
	width: 280px;
	margin: 10px 0;
}





